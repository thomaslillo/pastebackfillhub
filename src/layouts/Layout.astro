<style is:global>

    body {
        font-family: 'Nunito', sans-serif;
        background-color: darkgray;
        color: black;
    }

    /* Styling for h1 */
    h1 {
        font-family: 'Arial', sans-serif;
        font-size: 2.5em;
        color: #333333;
        margin-bottom: 0.5em;
        text-align: center;
    }

    /* Styling for h2 */
    h2 {
        font-family: 'Verdana', sans-serif;
        font-size: 2em;
        color: #444444;
        margin-bottom: 0.4em;
        text-align: left;
        border-bottom: 2px solid #EAEAEA;
        padding-bottom: 0.3em;
    }

    /* Styling for h3 */
    h3 {
        font-family: 'Helvetica', sans-serif;
        font-size: 1.5em;
        color: #555555;
        margin-bottom: 0.3em;
        text-align: left;        
    }

    /* Styling for h4 */
    h4 {
        font-family: 'Times New Roman', serif;
        font-size: 1.2em;
        color: #666666;
        margin-bottom: 0.2em;
        text-align: left;
        font-style: italic;
    }

    /* Styling for p */
    p {
        font-family: 'Georgia', serif;
        font-size: 1em;
        color: #333333;
        line-height: 1.6em;
        text-align: justify;
        margin-bottom: 1em;
        padding-bottom: 0.2em;
    }

    /* Styling for li */
    li {
        font-family: 'Georgia', serif;
        font-size: 1em;
        color: #333333;
        line-height: 1.6em;
        text-align: justify;
        margin-bottom: 1em;
        padding-bottom: 0.2em;
    }

</style>